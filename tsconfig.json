{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"],
      "@configs/*": ["configs/*"]
    }
  },
  "include": ["src"]
}
